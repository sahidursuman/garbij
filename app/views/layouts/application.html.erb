<!DOCTYPE html>
<html>
<head>
  <title>Garbaje</title>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Montserrat' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <header class="nav-bar <%= "nav-homepage" if @homepage %> ">

    <div class="logo">
      <% if @homepage %>
        <%= link_to (image_tag 'garbij_logo.png'), root_path %>
      <% else %>
      <%= link_to (image_tag 'garbij_logo_green.png'), root_path %>
      <% end %>
    </div> <!--.logo -->

    <div class="nav-links">

      <% if current_user %>
        <div class="logout">
          <%= link_to "LOG OUT", session_path("current"), class: "green", method: :delete %>
        </div>
        <div class="myprofile">
          <%= link_to "MY PROFILE", user_path(current_user), class: "green" %>
        </div>
      <% else %>
        <div class="signuplogin">
          <%= link_to "SIGN UP", new_user_path, class: "green" %>
          <%= link_to "LOGIN", new_session_path, class: "green" %>
        </div>
      <% end %>

    </div><!--.navlinks -->
  </header><!--.nav-bar -->
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
<main id="application_body">
  <%= yield %>
  <div class="push"></div>
</main>

<footer>&copy GÃ¤rbij 2016</footer>


</body>
</html>
