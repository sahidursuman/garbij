<h1>New Transaction</h1>

  <br />
  <br />
  <h4>Hey <%= @user.first_name%>,</h4> <br />
  you choose
  <%= @spaces.each do |space| %>
    <%= space.capacity %> space(s)
    at this address: <%= space.address %> <br>
    Date: <% time= Time.now%><%= time.to_formatted_s(:long) %> <br>
  <% end %>
  <br><br>
  <h4>Transaction Action</h4>
  <%= form_for @transaction do |f| %>
    <div class="form_field">
      <%= f.hidden_field :sell_space_id, :value => @space.id %>
      <%= f.hidden_field :quantity, :value => @space.capacity %>
    </div>
    <div class="submit">
      <%= f.submit %>
    </div>
    <!-- </div> -->
  <% end %>

  <%= link_to image_tag("http://www.dentistryonparkdale.com/images/icon-credit-card.png"), :controller => 'orders', :action => 'express_checkout' %>
