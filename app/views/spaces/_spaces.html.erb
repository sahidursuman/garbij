<!--  Return an array in any case 1 or multiple elements-->

<% Array(@spaces).each do |x| %>
  <% next if x.capacity == nil || x.capacity <= 0 %>
  <div id="spaces-list">
    <ul class = "all-list">
      <div class="space-item">
        
        <form action='/spaces' id="button-form" method="POST">

          <li><p>Address: <%= x.address %></p></li>
          <li><p>Capacity: <%= x.capacity %></p></li>
          <li><p>Garbage Day: <%= x.garbaje_day %></p></li>
          <button type="submit" class="buy-spot" form="button-form" value="submit">Buy the spot</button>

        </form>

      </div>
    </ul>
  </div>
<% end %>
