

<div class="edit-background">
  <div class="edit-profile animated fadeInUp">
    <div class="edit-container">
      <h1 class="edit-user-title">Edit User Info</h1>

      <%= form_for @user do |f| %>

      <div class="form_field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="form_field">
       <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="form_field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      </br>

      <div class="form_field">
        <%= f.label :credit_card_number %>
        <%= f.text_field :credit_card_number %>
      </div>

      <div class="form_field">
        <%= f.label :credit_card_month %>
        <%= f.text_field :credit_card_month %>
      </div>

      <div class="form_field">
        <%= f.label :credit_card_year %>
        <%= f.text_field :credit_card_year%>
      </div>

      <div class="form_field">
        <%= f.label :credit_card_verification_value %>
        <%= f.text_field :credit_card_verification_value %>
      </div>

      <p><strong>Want to change your password? Do it here.</strong></p>
      <div class="form_field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form_field">
        <%= f.label "Re-type password" %>
        <%= f.password_field :password_confirmation %>
      </div>

    </br>

      <div class="submit">
        <%= f.submit class: "btn-front" %>
      </div>

    </div>
    <% end %>
  </div>
</div>
