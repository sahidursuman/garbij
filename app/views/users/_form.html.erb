
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="newuser animated fadeInUp">
    <h1 class="sign-up-title">SIGN UP</h1>

    <div class="form-entry">
      <div class="form_field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name %>
      </div>

      <div class="form_field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name %>
      </div>

      <div class="form_field">
        <%= f.label :email %><br>
        <%= f.email_field :email %>
      </div>

      <div class="form_field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>

      <div class="form_field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>

      <br>
      <h4 class="credit-card-title">Your Credit Card </br>Credential</h4>

      <div class="form_field">
        <%= f.label :credit_card_number %><br>
        <%= f.text_field :credit_card_number %>
      </div>

      <div class="form-field">
        <%= f.label :credit_card_month %><br>
        <%= f.text_field :credit_card_month %>
      </div>

      <div class="form_field">
        <%= f.label :credit_card_year %><br>
        <%= f.text_field :credit_card_year %>
      </div>

      <div class="form-field">
        <%= f.label :credit_card_verification_value %><br>
        <%= f.text_field :credit_card_verification_value %>
      </div>

      <div class="submit">
        <%= f.submit class: "signup-btn" %>
        <!-- <%= f.submit 'name of button here', :class => 'submit_class_name_here' %> -->
      </div>
    </div>
</div>

<% end %>
